@model WebApp.Models.Category

@{
    ViewData["Title"] = "Edit";
}



<div class="form--contianer container">
    <div class="form--heading">
        <h3 class="text--secondary">Edit Category</h3>
    </div>
    <div class="row" onload="displayDateDialog()">
        <div class="col-md-3 col-0"></div>
        <div class="col-md-6">
            <form asp-action="Edit" class="form-content">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />

                <div class="form--group">
                    <label asp-for="ParentCategoryId" class="control-label form--label"></label>
                    <select asp-for="ParentCategoryId" class="control--input form--input" asp-items="ViewBag.ParentCategoryId"></select>
                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                </div>
                
                <div class="form--group">
                    <label asp-for="Name" class="control-label form--label"></label>
                    <input asp-for="Name" class="control--input form--input" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form--buttons">
                    <input type="submit" value="Save" class="button button--rounded button--secondary" />
                    <a asp-action="Index" class="button button--rounded button--secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

