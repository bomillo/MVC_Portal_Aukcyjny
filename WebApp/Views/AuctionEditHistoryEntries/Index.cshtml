@model IEnumerable<WebApp.Models.AuctionEditHistoryEntry>

@{
    ViewData["Title"] = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <style>
        .container {
            margin-left: 15pt;
            margin-right: 15pt;
            max-width: none;
        }

        td {
            width: 10%;
        }

        a {
            text-decoration: none;
        }

    </style>

</head>
<body>
<table class="table">
    <thead>
        <tr>
            <th >
                @Html.DisplayNameFor(model => model.Auction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JsonChange)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="width: 20%">
                @Html.DisplayFor(modelItem => item.Auction.Title)
            </td>
            <td style="width: 10%">
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td style="width: 10%">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td style="width: 10%">
                @Html.DisplayFor(modelItem => item.ChangedTime)
            </td>
            <td style=" width: 40%;
                        max-width: 500px;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        white-space: nowrap;">
                @Html.DisplayFor(modelItem => item.JsonChange)
            </td>
            <td style=" width: 100%;
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                        margin: auto">
                <a asp-action="Edit" asp-route-id="@item.EntryId">Edit</a> 
                <br/>
                <a asp-action="Details" asp-route-id="@item.EntryId">Details</a> 
                <br/>
                <a asp-action="Delete" asp-route-id="@item.EntryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
