@using WebApp.Models
@model IEnumerable<WebApp.Models.Product>

@{
    ViewData["Title"] = "";

    Pager pager = new Pager();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>

    <partial name="_pager" model="@pager" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VatRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsVatExcluded)
            </th>
            <th> </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        string iconName = "ICON_" + item.ProductId + "_" + item.Name + ".jpg";

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VatRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVatExcluded)
            </td>
            <td>
                        <!-- Do not display icons        -->
                        <img src="/Uploads/icon/@iconName"  />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>

<partial name="_pager" model="@pager" />