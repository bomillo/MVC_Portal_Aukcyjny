@model WebApp.Models.Product

@{
    ViewData["Title"] = "";
}
    
<div class="form--container container">
<div class="form--heading">
    <h3 class="text--secondary">Add Product</h3>
</div>
<div class="row">

<div class="col-md-3 col-0"></div>
    <div class="col-md-6">
        <form asp-action="Create" class="form--content">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <span class="text-danger">@ViewData["ErrorMessage"]</span>
            </div>

            <div class="form--group">
                <label asp-for="CategoryId" class="control--label form--label"></label>
                        <select asp-for="CategoryId" class="control--input form--select" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form--group">
                        <label asp-for="Name" class=" control--label form--label"></label>
                        <input asp-for="Name" class="control--input form--input" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form--group">
                <label asp-for="VatRate" class="control--label form--label"></label>
                        <input asp-for="VatRate" class="control--input form--input" />
                <span asp-validation-for="VatRate" class="text-danger"></span>
                    <label class="form-check-label input--checkbox">
                        <input class="form-check-input " asp-for="IsVatExcluded" /> @Html.DisplayNameFor(model => model.IsVatExcluded)
                    </label>
            </div>
            
                    <div class="form--buttons">
                        <input type="submit" value="Create" class="button button--rounded button--secondary" />
                        <a asp-action="Index" class="button button--rounded button--secondary">Back to List</a>
                    </div>

            <div class="clear"></div>
            
        </form>
            <div class="col-md-3 col-0"></div>      
    </div>
        </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}