@model WebApp.Models.Pager
@*
    Display list of items on page

*@
@{
    
}



<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class=" pagination justify-content-center">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    @Html.ActionLink("First", Model.Action, Model.Controller, new{page = 1, id = Model.ParentItemId}, new {@class = "page-link"})
                </li>

                <li class="page-item">
                    @Html.ActionLink("Previous", Model.Action, Model.Controller, new{page = Model.CurrentPage - 1, id = Model.ParentItemId}, new {@class = "page-link"})
                </li>
            }


            @for (var i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    @Html.ActionLink(i.ToString(), Model.Action, Model.Controller, new{page = i, id = Model.ParentItemId}, new {@class = "page-link"})
                </li>
            }


            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    @Html.ActionLink("Next", Model.Action, Model.Controller, new{page = Model.CurrentPage + 1, id = Model.ParentItemId}, new {@class = "page-link"})
                </li>

                <li class="page-item">
                    @Html.ActionLink("Last", Model.Action, Model.Controller, new{page = Model.TotalPages, id = Model.ParentItemId}, new {@class = "page-link"})
                </li>
            }

        </ul>
    }
</div>