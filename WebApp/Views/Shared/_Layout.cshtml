<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortalAukcyjny</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared.css" />
    <link rel="stylesheet" href="~/css/@(Context?.Items["cssFile"]?.ToString() ?? "dark").css" />
    <link rel="stylesheet" href="~/PortalAukcyjny.styles.css" asp-append-version="true" />
</head>
<body class="@(Context?.Items["theme"]?.ToString() ?? "dark-mode") background--primary text--primary">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 text--secondary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PortalAukcyjny</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text--secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text--secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
            <partial name="_ChooseThemePartial"></partial>
        </nav>
    </header>
    <div class="container text--primary">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <partial name="_CookieConsentPartial" />
    </div>
    
	<footer class="border-top footer text-muted">
        <div class="visit--counter">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
            </svg>
            @Context.Items["VisitCounter"]
        </div>
        <div>
			&copy; 2022 - PortalAukcyjny - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
		<div>
			<ul class="navbar-nav flex-grow-1 loginSection">
				@if (Context.User.Identity.IsAuthenticated)
				{
					<li class="currentLogin">
						@WebApp.Resources.Shared.LoggedInAs @Context.User.Identity.Name
					</li>
					<li>
						<partial name="/Views/Authentication/_LogoutButton.cshtml"/>
					</li>
				}
				else
				{
					<li>
						<partial name="/Views/Authentication/_LoginButton.cshtml"/>
					</li>
				}
			</ul>
		</div>
	</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
