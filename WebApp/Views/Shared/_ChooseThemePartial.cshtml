@using WebApp.Extensions
@using WebApp.Models

@{
    string theme = "dark";
    if (Context.Items["cssFile"] != null)
    {
        theme = Context.Items["cssFile"].ToString().ToLower();
    }

    
}

@using (Html.BeginForm("ValueChanged", "ChooseTheme", FormMethod.Post, new { id = "ThemeForm", name = "themeForm", @class="theme--form" }))
{


    <button type="button" class="round--svg--button text--primary background--primary border--primary" onclick="showDropdown()" id="dropdown_main">

   </button>
   <input type="hidden" name="themeType" id="theme"/>
    <div id="dropdown" class="fake--dropdown text--primary background--primary border--primary" style="display:none">
        <button type="submit" class="text--primary background--primary" value="Dark" name="Dark" id="dark" onclick="changeTheme('Dark')" title="@WebApp.Resources.Shared.Dark">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-moon" viewBox="0 0 16 16">
                <path d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278zM4.858 1.311A7.269 7.269 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.316 7.316 0 0 0 5.205-2.162c-.337.042-.68.063-1.029.063-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286z" />
            </svg>
       </button>
       <hr style="margin:0" class="text--primary"/>
        <button type="submit" value="Light" name="Light" class="text--primary background--primary" id="light" onclick="changeTheme('Light')" title="@WebApp.Resources.Shared.Light">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-brightness-high" viewBox="0 0 16 16">
