@model WebApp.Models.DTO.ResetPasswordModel
@using WebApp.Resources.Authentication
@{
    ViewData["Title"] = "Reset password";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset password</title>
</head>
<body>
    <div class="form--island">
<h4>Reset password</h4>
<div class="row">
    
        <form method="post" enctype="multipart/form-data" asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Guid" type="hidden" value="@Model.Guid"/>
                <div class="form--group--with--warning">
                    <label class="control-label form--label">@Localization.Password</label>
                    <input class="control--input form--input" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form--group--with--warning">
                    <label class="control-label form--label">@Localization.PasswordVerification</label>
                    <input class="control--input form--input" asp-for="PasswordVerification" class="form-control" />
                </div>
                <div style="margin-top:10px; text-align: end;">
                    <input type="submit" value="Register" class="button button--primary button--rounded" />
                </div>
        </form>
    
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
