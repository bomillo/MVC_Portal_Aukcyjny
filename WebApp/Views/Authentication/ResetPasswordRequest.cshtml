@using Auth = WebApp.Resources.Authentication.Localization
@using WebApp.Resources.Authentication
@{
    ViewData["Title"] = "Reset password";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reset password</title>
</head>
<body>
    <div style="max-width: 300px; margin: auto;">
        <h4>Reset password</h4>
        <hr />
        <div class="row">
            <div>
                <form method="post"  action="/Authentication/SendResetPasswordMail">
                    <div class="form--group" style="margin-bottom:0;">
                        <input type="text" placeholder="@Auth.Email" class="control--input form--input" id="loginFormMail" name="mail" value="" />
                    </div>
                    <div class="form-group" style="margin: auto; margin-top: 10px;">
                        <input type="submit" value="Send mail" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
