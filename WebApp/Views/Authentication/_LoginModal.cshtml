@using Auth = WebApp.Resources.Authentication.Localization
@using WebApp.Resources

<div class="modal-dialog">
    <div class="modal-content background--primary">
        <div class="form--heading">
            <h4 class="text--primary .form--group">@Auth.Login</h4>
        </div>
        <form id="loginForm" action="/Authentication/Login" method="post" class="form--content">
            <div class="modal-body">
                <div class="row">
                    <div class="form--group">
                        <label for="mail" class="control--label form--label">@Auth.Email</label>
                        <input type="text" class="control--input form--input" id="loginFormMail" name="mail" value="admin" />
                    </div>
                    <div class="form--group ">
                        <label for="password" class="control--label form--label">@Auth.Password</label>
                        <input type="password" class="control--input form--input" id="loginFormPassword" name="password" value="admin" />
                    </div>
                        <input type="hidden" id="loginFormReturnUrl" name="url"/>
                        <div id="loginFormMessage" class="text-danger" style="display:none;">@Auth.WrongCredentials</div>

            </div>
            <div class="">
                <input class="button button--secondary button--rounded button--smaller" type="submit" value="Reset password" formaction="/Authentication/SendResetPasswordMail" />
                <button class="button button--primary button--rounded" type="submit">@Auth.Login</button>
            </div>
        </form>
        <form id="secondForm" action="/Authentication" method="post" class="form--content">
            <input type="hidden" id="CurrentUrl" name="url" />
            <input type="hidden" id="secondFormMail" name="mail" />
            <div class="form--heading" style="display:flex; justify-content: space-between; flex-direction: column;">
                <div class="form--group">
                    <input class="button button--secondary button--rounded" type="submit" value="Google" formaction="/Authentication/LoginGoogle" />
                </div>
                <div class="form--group">
                    <input class="button button--secondary button--rounded " type="submit" value="Facebook" formaction="/Authentication/LoginFacebook" />
                </div>
            </div>
            <div class="form--heading form--group" style="display:flex; justify-content: space-between; margin-bottom: 0;">
                <a class="button button--secondary button--rounded" asp-area="" asp-controller="Authentication" asp-action="Register">Register</a>
                <button type="button" class="button button--secondary button--rounded button--smaller" onclick="HideModal()">@Shared.Close</button>
            </div>
        </form>
    </div>
</div>


<script>
    $( "#loginForm" ).submit(function( event ) {
        $("#loginFormMessage").hide();
        event.preventDefault();
        $("#loginFormReturnUrl").val(window.location.toString());
        $.post("@Url.Action("ValidateCrenedtials","Authentication")",
            {
                mail: $("#loginFormMail").val(),
                password: $("#loginFormPassword").val(),
            },
            function (data) {
                if (!data.valid) {
                    $("#loginFormMessage").show();
                } else {
                     $( "#loginForm" ).unbind('submit').submit()
                }
            }
        );
    });

    $( "#secondForm" ).submit(function( event ) {
        debugger;
        $("#secondFormMail").val($("#loginFormMail").val());
    });

    $("#CurrentUrl").val(window.location.toString());

</script>