@model WebApp.Models.DTO.EditUserProfileModel
@using WebApp.Models
@using WebApp.Resources.Authentication
@{
    ViewData["Title"] = "Edit profile";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div class="form--island">
        <h4>Register</h4>

        <div class="row">
            <div>
                <form method="post" enctype="multipart/form-data" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form--group--with--warning">
                        <label class="control-label form--label">@Localization.Name</label>
                        <input class="control--input form--input" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form--group--with--warning">
                        <label class="control-label form--label">@Localization.Email</label>
                        <input class="control--input form--input" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form--group--with--warning">
                        <label class="control-label form--label">@Localization.Password</label>
                        <input class="control--input form--input" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form--group--with--warning">
                        <label class="control-label form--label">@Localization.PasswordVerification</label>
                        <input class="control--input form--input" asp-for="PasswordVerification" class="form-control" />
                        <span></span>
                    </div>

                    <div class="form--group--with--warning">
                        <label asp-for="Language" class="control-label form--label"></label>
                        <select asp-for="Language" asp-items="Html.GetEnumSelectList<Language>()" style="appearance: revert;" class="control--input form--input"></select>
                    </div>

                    <div style="margin-top:10px; text-align: end;">
                        <input type="submit" value="Register" class="button button--primary button--rounded" />
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
